---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
    <Header />
    <main class="flex-grow-[1]  w-full flex flex-col justify-center items-center max-w-3xl mx-auto md:px-4">
        <h1 class="text-4xl font-bold">Formulario de contacto</h1>
        <form action="form.php" class="mt-3  flex flex-col border-2 border-red-800 rounded-md bg-[#191a19] dark:bg-gray-400 p-4 [&>input]:text-gray-950 [&>input]:rounded-lg [&>input]:bg-gray-300 [&>textarea]:bg-gray-300  [&>textarea]:text-gray-950 [&>textarea]:rounded-lg [&>input]:py-1 [&>input]:px-2 size-full [&>select]:text-gray-950 [&>select]:rounded-lg [&>select]:bg-gray-300 [&>select]:mb-3 [&>select]:py-1 [&>select]:px-2 [&>input]:mb-3 [&>textarea]:mb-3 [&>textarea]:py-1 [&>textarea]:px-2 [&>input]:outline-none [&>input:focus]:border-2 [&>input:focus]:border-red-800 [&>select]:outline-none [&>select:focus]:border-2 [&>select:focus]:border-red-800 [&>textarea]:outline-none [&>textarea:focus]:border-2 [&>textarea:focus]:border-red-800 shadow-red-800 shadow-lg" >
            <label for="" class="">Nombre</label>
            <input type="text" class="" placeholder="Introduce tu nombre" required>
            <label for="">Correo electronico</label>
            <input type="email" placeholder="Introduce tu correo electronico" required>
            <label for="">Valoración</label>
            <select name="" id="" >
                <option value="" disabled selected>--Seleccione una opción--</option>
                <option value="">Muy mala</option>
                <option value="">Mala</option>
                <option value="">Regular</option>
                <option value="">Buena</option>
                <option value="">Muy buena</option>
            </select>
            <label for="" >Añadir sugerencias</label>
            <textarea name="" id="" cols="20" rows="5" class="resize-none" required></textarea>
            <div class="flex gap-2 mb-6 align-middle">
                <input type="checkbox" required>
                <label for="">Acepto que los datos introducidos son correctos y sean enviados.</label>
            </div>
            <input type="submit" value="Enviar" class="hover:!bg-red-800 hover:!text-gray-50 transition ease-in-out duration-300 !bg-green-300" >
        </form>
    </main>
    <Footer />
</Layout>